# Required Environment Variables
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_server_guild_id_here
OPENAI_API_KEY=your_openai_api_key_here

# Optional Environment Variables (defaults shown)
DISCORD_YT_SUMMARIES_CHANNEL=yt-uploads
DISCORD_YT_TRANSCRIPTS_CHANNEL=yt-transcripts
DISCORD_DAILY_REPORT_CHANNEL=daily-report

# Channel Name Prefixes (for dynamic channel discovery)
SUMMARY_PROMPT_PREFIX=yt-summary-prompt-
SUMMARIES_OUTPUT_PREFIX=yt-summaries-
DAILY_REPORT_PROMPT_PREFIX=yt-daily-report-prompt-

# Daily Report Scheduling (CEST timezone)
DAILY_REPORT_HOUR=18
DAILY_REPORT_MINUTE=0

# Performance Settings
CACHE_TRANSCRIPTS=true
DEBUG_MODE=false

# YouTube API (optional - for enhanced title extraction)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Additional OpenAI Settings
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# Node Environment
NODE_ENV=development
PORT=3000
