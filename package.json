{
  "name": "yt-discord-automation",
  "version": "1.0.0",
  "description": "YouTube to Discord AI Automation Bot",
  "main": "src/main.js",
  "scripts": {
    "start": "node src/main.js",
    "dev": "NODE_ENV=development nodemon src/main.js",
    "start:old": "node api/listener.js",
    "dev:old": "NODE_ENV=development nodemon api/listener.js",
    "test": "node tests/test-youtube-transcript-api.js",
    "test:old": "node test-enhanced-transcript.js",
    "test:prod": "NODE_ENV=production node tests/test-youtube-transcript-api.js",
    "test:transcript": "node tests/transcript-comprehensive-test.js",
    "test:transcript:api": "node tests/test-youtube-transcript-api.js",
    "test:transcript:heroku": "NODE_ENV=production node tests/transcript-comprehensive-test.js",
    "setup:heroku": "node scripts/heroku-transcript-setup.js",
    "setup:transcript": "bash scripts/setup-youtube-transcript-api.sh",
    "monitor": "node utils/monitoring.js stats",
    "clean-cache": "node api/manage-cache.js clean",
    "cleanup": "./scripts/cleanup.sh",
    "health": "curl -f http://localhost:3000/health || echo 'Health check failed'",
    "heroku-prebuild": "echo 'No prebuild needed'",
    "heroku-postbuild": "echo 'Skipping npm postbuild'"
  },
  "keywords": [
    "discord",
    "youtube",
    "openai",
    "automation",
    "puppeteer"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.13.0",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "node-cron": "^3.0.2",
    "node-fetch": "^2.7.0",
    "openai": "^4.10.0",
    "youtube-transcript": "^1.2.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": "20.x"
  }
}
